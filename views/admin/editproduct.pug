extends ../layout/main_layout.pug 

block style
    link(rel="stylesheet", href="/css/forms.css")
    link(rel="stylesheet", href="/css/product.css")


block content
    main
        form.product-form(action="/admin/productedited/", method="POST")
            .form-control
                label(for="title") Title
                input(type="text", name="title", id="title", value=product.title)
            .form-control
                label(for="imageUrl") Image URL
                input(type="text", name="imageUrl", id="imageUrl", value=product.imageUrl)
            .form-control
                label(for="price") Price
                input(type="number", name="price", id="price", step="0.01", value=product.price)
            .form-control
                label(for="description") Description
                textarea(name="description", id="description", rows="5")
                    | #{product.description}
                input(type="hidden",name='productid',value=product.id)
            button.btn(type="submit") Add Product
